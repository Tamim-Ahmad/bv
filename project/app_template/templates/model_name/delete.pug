extends base.pug
// TODO replace MODEL with the model name

- load i18n

block breadcrumbs
  li
    a(href="{% url 'MODEL_list' %}")
      | {{opts.verbose_name_plural.capitalize}}
  li
    a(href="{{object.get_absolute_url}}")
      | {{object}}


block content
  form(action="" method="post")
    {% csrf_token %}
    .alert.alert-danger
      {% blocktrans %}Are you sure you want to delete' "{{ object }}"?{% endblocktrans %}
    .text-right
      .btn-group
        input.btn.btn-primary(type="submit" value="{% trans 'Confirm' %}")
        a.btn.btn-default(href="{{object.get_absolute_url}}")
          | {% trans 'Cancel' %}
