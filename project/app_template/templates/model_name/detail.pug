extends base.pug
// TODO replace MODEL with the model name

- load i18n

block breadcrumbs
  li
    a(href="{% url 'MODEL_list' %}")
      | {{opts.verbose_name_plural.capitalize}}

block content
  .text-right
    .btn-group
      if perms.MODELs.change_MODEL
        a.btn.btn-primary(href="{% url 'MODEL_update' MODEL.id %}")
          i.fa.fa-edit
      if perms.MODELs.delete_MODEL
        a.btn.btn-danger(href="{% url 'MODEL_delete' MODEL.id %}")
          i.fa.fa-times

  table.table.table-bordered.table-hover
    tbody
      th Id
      td {{MODEL.id}}
